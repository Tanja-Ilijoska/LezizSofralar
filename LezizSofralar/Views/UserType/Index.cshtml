@model IEnumerable<LezizSofralar.ViewModels.UserTypeListViewModel>

@{
    ViewBag.Title = "Index";
}
<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="http://placehold.it/1400x300" data-natural-width="1400" data-natural-height="300">
    <div id="sub_header">
        <div class="container" id="sub_content">
            <div class="row">
                <div class="col-md-12">
                    <h1>User Types</h1>
                    <div class="bread-crums">
                        <a href="#">Home</a>
                        <span class="bread-crums-span">&raquo;</span>
                        <span class="current">User Types</span>
                    </div><!-- End bread-crums -->
                </div>
            </div><!-- End row -->
        </div><!-- End container -->
    </div>
</section>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManageCategories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManageLocations)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManageFilters)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManageUsers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManageRecipes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManageOwnRecipes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManageCategories)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManageLocations)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManageFilters)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManageUsers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManageRecipes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManageOwnRecipes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
